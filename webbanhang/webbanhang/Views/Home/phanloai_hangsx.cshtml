@model List<webbanhang.Models.SANPHAM>
<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">CÁC SẢN PHẨM THEO THƯƠNG HIỆU</h2>
        @foreach (var p in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <a href="@Url.Action("Details","Home",new {id =@p.maSP})"><img src="@p.hinh" alt="" /></a>
                            <h2>@p.giahientai đ</h2>
                            <p><b>@p.tenSP</b></p>
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Bỏ Giỏ</a>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                            <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
